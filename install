#!/bin/sh

sudo pacman -Sy reflector 

sudo reflector --sort score --threads 5 --save /etc/pacman.d/mirrorlist


sudo pacman -S xorg-server mpv yt-dlp pipewire pipewire-pulse pipewire-alsa libva-intel-driver dmenu playerctl xorg-setxkbmap dash go zsh noto-fonts-emoji ttf-nerd-fonts-symbols ttf-ibm-plex feh picom bspwm sxhkd neovim xorg-xinit doas yarn npm xsel

sudo  ln -sfT dash /usr/bin/sh

mkdir -p $HOME/.config/picom
mkdir -p $HOME/.config/bspwm
mkdir -p $HOME/.config/sxhkd
mkdir -p $HOME/.config/polybar
mkdir -p $HOME/.config/nvim	
mkdir -p $HOME/.config/kitty
mkdir -p $HOME/.config/background
mkdir -p $HOME/.xinit

touch $HOME/.xinitrc
echo "exec bspwm" > $HOME/.xinitrc

cp $HOME/Gentoo/.zshrc /$HOME/.zshrc
cp $HOME/Gentoo/config.ini /$HOME/.config/polybar
cp $HOME/Gentoo/launch.sh /$HOME/.config/polybar
cp $HOME/Gentoo/bspwmrc /$HOME/.config/bspwm/
cp $HOME/Gentoo/sxhkdrc /$HOME/.config/sxhkd/
cp $HOME/Gentoo/init.vim /$HOME/.config/nvim/
cp $HOME/Gentoo/*.jpg /$HOME/.config/background/
cp $HOME/Gentoo/kitty.conf /$HOME/.config/kitty/

sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

git clone https://aur.archlinux.org/yay.git

cd yay 

makepkg -si

cd 

git clone https://github.com/zsh-users/zsh-syntax-highlighting.git

cd zsh-syntax-highlighting

sudo make install

cd

sudo chsh -s /usr/bin/zsh marcioc

yay -S pfetch orphan-manager dashbinsh
